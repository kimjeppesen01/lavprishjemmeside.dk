# ============================================================
# ANTHROPIC
# ============================================================
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-6
ANTHROPIC_MAX_TOKENS=4096

# ============================================================
# SLACK
# ============================================================
SLACK_BOT_TOKEN=xoxb-...
SLACK_APP_TOKEN=xapp-...
SLACK_SIGNING_SECRET=...
SLACK_OWNER_USER_ID=U...           # Your Slack user ID — THE security perimeter
SLACK_CONTROL_CHANNEL_ID=C...     # Your private control channel ID
SLACK_CLIENT_CHANNELS=            # Comma-separated channel IDs for client support (e.g. C111AAA,C222BBB)

# ============================================================
# AGENT IDENTITY
# ============================================================
AGENT_NAME=Sam
AGENT_TIMEZONE=Europe/Copenhagen
AGENT_LOG_LEVEL=INFO

# ============================================================
# MEMORY
# ============================================================
MEMORY_DB_PATH=/Users/samlino/Samlino/Personal-agent/data/agent.db
MEMORY_MARKDOWN_PATH=/Users/samlino/Samlino/Personal-agent/memory/markdown
MEMORY_MAX_CONVERSATION_TOKENS=8000
MEMORY_SUMMARIZE_AFTER_TURNS=20

# ============================================================
# TOOLS — FILESYSTEM
# ============================================================
FS_SAFE_ROOTS=/Users/samlino/Samlino,/Users/samlino/Desktop
FS_DENY_PATTERNS=.env,.git/config,id_rsa

# ============================================================
# TOOLS — SHELL
# ============================================================
SHELL_REQUIRE_APPROVAL=true
SHELL_TIMEOUT_SECONDS=30
SHELL_BLOCKED_COMMANDS=rm -rf,sudo rm,pkill

# ============================================================
# TOOLS — WEB SEARCH
# ============================================================
BRAVE_SEARCH_API_KEY=BSA...         # Optional — falls back to DuckDuckGo
SEARCH_MAX_RESULTS=5

# ============================================================
# TOOLS — EMAIL + CALENDAR
# ============================================================
EMAIL_ENABLED=true
EMAIL_REQUIRE_APPROVAL=true
CALENDAR_ENABLED=true
CALENDAR_WRITE_REQUIRE_APPROVAL=true

# ============================================================
# TOOLS — BROWSER
# ============================================================
BROWSER_ENABLED=true
BROWSER_HEADLESS=true

# ============================================================
# PROJECTS CONTEXT
# ============================================================
PROJECTS_ROOT=/Users/samlino/Samlino
CARD_PULSE_PATH=/Users/samlino/Samlino/LOVEABLE APPLICATIONS/card-pulse
AI_CLARITY_PATH=/Users/samlino/Samlino/LOVEABLE APPLICATIONS/ai-clarity
THE_ARTISAN_PATH=/Users/samlino/Samlino/The-artisan

# ============================================================
# AUDIT
# ============================================================
AUDIT_LOG_PATH=/Users/samlino/Samlino/Personal-agent/audit/logs
AUDIT_RETENTION_DAYS=90

# ============================================================
# SCHEDULER
# ============================================================
SCHEDULER_ENABLED=true
