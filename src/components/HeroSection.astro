---
interface Props {
  headline: string;
  description: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  backgroundImage?: string;
  alignment?: 'left' | 'center';
  instanceId?: string | number;
}

const {
  headline = '',
  description = '',
  primaryCta,
  secondaryCta,
  backgroundImage,
  alignment = 'left',
  instanceId = 'default',
} = Astro.props;
---

<header
  class="relative overflow-hidden py-[var(--section-padding-y-lg)] px-[var(--container-padding-x)]"
  role="banner"
>
  {backgroundImage && (
    <div class="absolute inset-0 z-0">
      <img
        src={backgroundImage}
        alt=""
        class="h-full w-full object-cover"
        aria-hidden="true"
        loading="eager"
      />
      <div
        class="absolute inset-0 bg-[var(--color-bg-page)]/90"
        aria-hidden="true"
      ></div>
    </div>
  )}
  <div class="relative z-10 mx-auto max-w-[var(--container-max-width)]">
    <div
      class:list={[
        'flex flex-col gap-6',
        alignment === 'center' && 'items-center text-center',
      ]}
    >
      <h1
        class="text-[var(--font-size-4xl)] font-bold leading-[var(--line-height-tight)] text-[var(--color-text-primary)] md:text-[var(--font-size-5xl)]"
        style="font-family: var(--font-heading)"
      >
        {headline}
      </h1>
      <p
        class="max-w-2xl text-[var(--font-size-lg)] leading-[var(--line-height-normal)] text-[var(--color-text-secondary)]"
        style="font-family: var(--font-body)"
      >
        {description}
      </p>
      {(primaryCta || secondaryCta) && (
        <div class="flex flex-col gap-3 sm:flex-row sm:gap-4">
          {primaryCta && (
            <a
              href={primaryCta.href}
              class="inline-flex min-h-[44px] min-w-[44px] items-center justify-center rounded-[var(--radius-button)] bg-[var(--color-primary)] px-6 py-3 text-[var(--font-size-base)] font-medium text-[var(--color-text-on-primary)] shadow-[var(--shadow-sm)] transition-colors hover:bg-[var(--color-primary-hover)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:ring-offset-2"
              style="font-family: var(--font-body)"
            >
              {primaryCta.text}
            </a>
          )}
          {secondaryCta && (
            <a
              href={secondaryCta.href}
              class="inline-flex min-h-[44px] min-w-[44px] items-center justify-center rounded-[var(--radius-button)] border-2 border-[var(--color-primary)] px-6 py-3 text-[var(--font-size-base)] font-medium text-[var(--color-primary)] transition-colors hover:bg-[var(--color-primary-light)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] focus:ring-offset-2"
              style="font-family: var(--font-body)"
            >
              {secondaryCta.text}
            </a>
          )}
        </div>
      )}
    </div>
  </div>
</header>
