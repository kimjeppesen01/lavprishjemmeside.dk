---
interface Props {
  stats: Array<{ value: string; label: string; icon?: string }>;
  backgroundColor?: 'default' | 'primary' | 'alt';
  instanceId?: string | number;
}

const {
  stats = [],
  backgroundColor = 'default',
  instanceId = 'default',
} = Astro.props;

const bgClass =
  backgroundColor === 'primary'
    ? 'bg-[var(--color-primary)]'
    : backgroundColor === 'alt'
      ? 'bg-[var(--color-bg-section-alt)]'
      : 'bg-[var(--color-bg-page)]';

const valueClass =
  backgroundColor === 'primary'
    ? 'text-[var(--color-text-on-primary)]'
    : 'text-[var(--color-primary)]';

const labelClass =
  backgroundColor === 'primary'
    ? 'text-[var(--color-text-on-primary)]/80'
    : 'text-[var(--color-text-secondary)]';
---

<section
  class={`py-[var(--section-padding-y)] px-[var(--container-padding-x)] ${bgClass}`}
  aria-label="NÃ¸gletal"
>
  <div class="mx-auto max-w-[var(--container-max-width)]">
    <div class="grid grid-cols-2 gap-8 md:grid-cols-3 lg:grid-cols-4">
      {stats.map((stat) => (
        <div class="text-center">
          {stat.icon && (
            <div class="mb-2 text-2xl" aria-hidden="true">
              {stat.icon}
            </div>
          )}
          <div
            class={`text-[var(--font-size-4xl)] font-bold md:text-[var(--font-size-5xl)] ${valueClass}`}
            style="font-family: var(--font-heading)"
          >
            {stat.value}
          </div>
          <div
            class={`mt-1 text-[var(--font-size-base)] ${labelClass}`}
            style="font-family: var(--font-body)"
          >
            {stat.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
