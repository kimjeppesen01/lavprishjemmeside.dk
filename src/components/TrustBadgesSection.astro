 */
interface Props {
  badges: Array<{
    type: 'ssl' | 'payment' | 'guarantee' | 'custom';
    label: string;
    icon?: string;
  }>;
  layout?: 'horizontal' | 'compact';
  instanceId?: string | number;
}

const {
  badges = [],
  layout = 'horizontal',
  instanceId = 'default',
} = Astro.props;

// Default badges when none provided
const defaultBadges = [
  { type: 'ssl' as const, label: 'Sikker betaling', icon: 'ðŸ”’' },
