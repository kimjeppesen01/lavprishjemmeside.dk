---
import designFeatures from '../data/design-features.json';
import headerFooter from '../data/header-footer.json';
import MegaMenu from './MegaMenu.astro';

const stickyClass = designFeatures.stickyHeader ? 'sticky top-0 z-40' : '';
const layout = headerFooter.header_layout || 'regular';
const themeMode = designFeatures.themeMode === 'modern' ? 'modern' : 'simple';
const effectiveLayout = themeMode === 'modern' && layout === 'regular' ? 'modern' : layout;
const logoUrl = headerFooter.header_logo_url || '/favicon.svg';
const logoText = headerFooter.header_logo_text || (typeof import.meta.env.PUBLIC_SITE_URL === 'string' && import.meta.env.PUBLIC_SITE_URL ? new URL(import.meta.env.PUBLIC_SITE_URL).hostname : 'lavprishjemmeside.dk');
const menu1 = Array.isArray(headerFooter.header_menu_1) ? headerFooter.header_menu_1 : [];
const menu2 = Array.isArray(headerFooter.header_menu_2) ? headerFooter.header_menu_2 : [];
const megaHtml = headerFooter.header_mega_html;
const megaMenu = headerFooter.header_mega_menu;
---

{effectiveLayout === 'modern-mega' ? (
  <header id="main-header" class={stickyClass}>
    <MegaMenu
      menu={Array.isArray(megaMenu) && megaMenu.length > 0 ? megaMenu : undefined}
      logoUrl={logoUrl}
      logoText={logoText}
      ctaLinks={menu2}
    />
  </header>
) : effectiveLayout === 'mega' && megaHtml ? (
  <header id="main-header" class={`${stickyClass} glass-surface border-b border-[var(--color-border)]`}>
    <div class="mega-nav-wrapper" set:html={megaHtml} />
  </header>
) : effectiveLayout === 'modern' ? (
  <header id="main-header" class={`${stickyClass} glass-surface border-b border-[var(--color-border)] transition-all duration-300`}>
    <nav class="mx-auto max-w-[var(--container-max-width)] px-[var(--container-padding-x)] py-5 flex flex-col items-center gap-4">
      <a href="/" class="flex items-center gap-2">
        <img src={logoUrl} alt={logoText} class="h-10 w-auto" width="40" height="40" />
        <span class="text-xl font-semibold text-[var(--color-primary)]">{logoText}</span>
      </a>
      <button
        id="mobile-menu-btn-modern"
        type="button"
        class="focus-modern md:hidden rounded-[var(--radius-md)] p-2 text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)]"
        aria-label="Menu"
        aria-expanded="false"
      >
        <span class="hamburger-icon" aria-hidden="true">
          <span></span>
          <span></span>
          <span></span>
        </span>
      </button>
      <ul id="modern-menu" class="hidden md:flex flex-wrap justify-center gap-4 rounded-[var(--radius-full)] border border-[var(--color-border)] bg-[var(--color-bg-page)]/80 p-2 shadow-[var(--shadow-sm)]">
        {menu1.map((link) => (
          <li>
            <a href={link.href} class="header-nav-link focus-modern rounded-[var(--radius-full)] px-4 py-2 text-[var(--color-text-secondary)] hover:bg-[var(--color-neutral-100)] hover:text-[var(--color-primary)] transition-colors">
              {link.label}
            </a>
          </li>
        ))}
        {menu2.map((link) => (
          <li>
            <a href={link.href} class="focus-modern inline-flex min-h-[44px] items-center rounded-[var(--radius-full)] btn-gradient px-5 py-2 text-sm font-semibold text-[var(--color-text-on-primary)] shadow-[var(--shadow-sm)] transition-opacity hover:opacity-90">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    <div id="mobile-menu-modern" class="md:hidden hidden w-full border-t border-[var(--color-border)] px-[var(--container-padding-x)] py-4">
      <ul class="flex flex-col gap-2">
        {menu1.map((link) => (
          <li><a href={link.href} class="focus-modern block rounded-[var(--radius-md)] px-3 py-2 text-[var(--color-text-secondary)] hover:bg-[var(--color-neutral-100)] hover:text-[var(--color-primary)]">{link.label}</a></li>
        ))}
        {menu2.map((link) => (
          <li><a href={link.href} class="focus-modern block rounded-[var(--radius-md)] px-3 py-2 font-medium text-[var(--color-primary)] hover:bg-[var(--color-primary-light)]">{link.label}</a></li>
        ))}
      </ul>
    </div>
  </header>
) : (
  <header id="main-header" class={`${stickyClass} glass-surface border-b border-[var(--color-border)] transition-all duration-300`}>
    <nav class="mx-auto max-w-[var(--container-max-width)] px-[var(--container-padding-x)] py-4 flex items-center justify-between gap-4">
      <a href="/" class="flex items-center gap-2 shrink-0">
        <img src={logoUrl} alt={logoText} class="h-8 w-auto hidden sm:block" width="32" height="32" />
        <span class="text-xl font-semibold text-[var(--color-primary)]">{logoText}</span>
      </a>
      <button
        id="mobile-menu-btn"
        type="button"
        class="focus-modern md:hidden rounded-[var(--radius-md)] p-2 text-[var(--color-text-secondary)] hover:text-[var(--color-text-primary)]"
        aria-label="Menu"
        aria-expanded="false"
      >
        <span class="hamburger-icon" aria-hidden="true">
          <span></span>
          <span></span>
          <span></span>
        </span>
      </button>
      <ul id="desktop-nav" class="hidden md:flex gap-8 flex-1 justify-center">
        {menu1.map((link) => (
          <li>
            <a href={link.href} class="header-nav-link focus-modern rounded-[var(--radius-full)] px-3 py-2 text-[var(--color-text-secondary)] hover:bg-[var(--color-neutral-100)] hover:text-[var(--color-primary)] transition-colors">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
      <ul class="hidden md:flex gap-4 shrink-0">
        {menu2.map((link) => (
          <li>
            <a href={link.href} class="focus-modern inline-flex min-h-[44px] items-center rounded-[var(--radius-full)] btn-gradient px-5 py-2 text-sm font-semibold text-[var(--color-text-on-primary)] shadow-[var(--shadow-sm)] transition-opacity hover:opacity-90">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    <div id="mobile-menu" class="md:hidden hidden border-t border-[var(--color-border)] bg-[var(--color-bg-page)] px-[var(--container-padding-x)] py-4">
      <ul class="space-y-2">
        {menu1.map((link) => (
          <li><a href={link.href} class="focus-modern block rounded-[var(--radius-md)] px-3 py-2 text-[var(--color-text-secondary)] hover:bg-[var(--color-neutral-100)] hover:text-[var(--color-primary)]">{link.label}</a></li>
        ))}
        {menu2.map((link) => (
          <li><a href={link.href} class="focus-modern block rounded-[var(--radius-md)] px-3 py-2 font-medium text-[var(--color-primary)] hover:bg-[var(--color-primary-light)]">{link.label}</a></li>
        ))}
      </ul>
    </div>
  </header>
)}

<style>
/* Animated hamburger â†’ X morph */
.hamburger-icon {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 24px;
  height: 18px;
}
.hamburger-icon span {
  display: block;
  width: 100%;
  height: 2px;
  background: currentColor;
  border-radius: 2px;
  transition: transform 200ms ease, opacity 200ms ease;
  transform-origin: center;
}
/* X state when aria-expanded="true" */
button[aria-expanded="true"] .hamburger-icon span:nth-child(1) {
  transform: translateY(8px) rotate(45deg);
}
button[aria-expanded="true"] .hamburger-icon span:nth-child(2) {
  opacity: 0;
  transform: scaleX(0);
}
button[aria-expanded="true"] .hamburger-icon span:nth-child(3) {
  transform: translateY(-8px) rotate(-45deg);
}

/* Header scrolled: stronger shadow + blur */
#main-header.header--scrolled {
  box-shadow: var(--shadow-md, 0 4px 20px rgba(0,0,0,0.1));
}

/* Nav link hover underline slide */
.header-nav-link {
  position: relative;
}
.header-nav-link::after {
  content: '';
  position: absolute;
  bottom: 4px;
  left: 50%;
  right: 50%;
  height: 2px;
  background: var(--color-primary);
  border-radius: 1px;
  transition: left 200ms ease, right 200ms ease;
}
.header-nav-link:hover::after {
  left: 12px;
  right: 12px;
}

@media (prefers-reduced-motion: reduce) {
  .hamburger-icon span { transition: none; }
  .header-nav-link::after { transition: none; }
}
</style>

<script>
  const header = document.getElementById('main-header');
  if (header) {
    const toggleScrolled = () => header.classList.toggle('header--scrolled', window.scrollY > 8);
    window.addEventListener('scroll', toggleScrolled, { passive: true });
    toggleScrolled();
    [['mobile-menu-btn', 'mobile-menu'], ['mobile-menu-btn-modern', 'mobile-menu-modern']].forEach(([btnId, menuId]) => {
      const btn = document.getElementById(btnId);
      const menu = document.getElementById(menuId);
      if (btn && menu) btn.addEventListener('click', () => {
        menu.classList.toggle('hidden');
        btn.setAttribute('aria-expanded', String(!menu.classList.contains('hidden')));
      });
    });
  }
</script>
